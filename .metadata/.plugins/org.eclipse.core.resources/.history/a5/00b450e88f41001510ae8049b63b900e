$(document).ready(function() {
        $("a[name='min']").click(function(){
        	$("#sidebar").hide();
        	$(".col-sm-9").removeClass().addClass("col-sm-12");
        	$(".col-md-10").removeClass().addClass("col-md-12");
        });
        $("a[name='max']").click(function(){
        	$("#sidebar").show();
        });
    });