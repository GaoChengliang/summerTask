			 <div class="form-group">
                <label>财产编号：${officeApply.OSID!''}</label>
            </div>

            <div class="form-group">
                <label>用品名：${officeApply.NAME!''}</label>
            </div>

            <div class="form-group">
                <label>申请者编号</label>
                <input placeholder="输入使用者..." class="form-control" type="text" name="officeSupplyApply.USER_ACCOUNT"
                       value="" required="true"/>
