    <script>
        function save(){
            $("#officeSupplyApply.APPLY_STATUS").val="SAVED";
            $('#applyForm').attr("action", "").submit();
        }

        function sub(){
            $("#officeSupplyApply.APPLY_STATUS").val("SUBMMITED");
            $("#officeSupplyApply.REVIEW_STATUS").val("PENDING");
            document.applyForm.submit();
        }
    </script>
